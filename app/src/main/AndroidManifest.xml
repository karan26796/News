<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.karan.news">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppFullScreenTheme">
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppFullScreenTheme"></activity>
        <activity android:name=".activities.NewsHome">
        </activity>
        <activity
            android:name=".activities.SignUp"
            android:label="user"></activity>
        <activity
            android:name=".activities.AppPreferences"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".activities.NewsHome"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.NewsDetails"
            android:parentActivityName=".activities.NewsHome" />
        <activity android:name=".activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>