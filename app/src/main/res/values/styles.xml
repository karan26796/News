<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Light theme. -->
    <style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="text_color_primary">@color/black</item>
        <item name="text_color_secondary">@color/light_gray</item>
        <item name="text_color_tertiary">@color/gray_dark</item>

        <item name="bg_color">@color/white</item>
        <item name="bg_color_1">@color/off_white</item>
        <item name="status_color">@color/red</item>
        <item name="toolbar_color">@color/colorPrimaryDark</item>

        <item name="cardview_bg_color">@color/white</item>
        <item name="cardview_read_bg_color">@color/off_white</item>
    </style>

    <!-- Dark theme. -->
    <style name="AppFullScreenDarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkThemeDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>

        <item name="text_color_primary">@color/white</item>
        <item name="text_color_secondary">@color/off_white</item>
        <item name="text_color_tertiary">@color/off_white</item>

        <item name="bg_color">@color/black_1</item>
        <item name="bg_color_1">@color/gray</item>

        <item name="status_color">@color/teal</item>
        <item name="toolbar_color">@color/gray_dark</item>

        <item name="cardview_bg_color">@color/gray_dark</item>
        <item name="cardview_read_bg_color">@color/lighter_gray</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@color/common_google_signin_btn_text_dark_default</item>
        <item name="android:colorBackground">@color/background_material</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Text Styles-->
    <style name="SmallBodyText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MediumBodyText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LargeBodyText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextSizeSmall">
        <item name="text_size">@style/SmallBodyText</item>
    </style>

    <style name="TextSizeMedium">
        <item name="text_size">@style/MediumBodyText</item>
    </style>

    <style name="TextSizeLarge">
        <item name="text_size">@style/LargeBodyText</item>
    </style>
</resources>
