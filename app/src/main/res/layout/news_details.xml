<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/category_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/default_elevation"
        android:paddingStart="@dimen/padding_large"
        android:paddingEnd="@dimen/padding_large"
        android:textAlignment="center"
        app:title="@string/category"
        app:titleTextColor="@color/white" />

    <ImageButton
        android:id="@+id/bookmark"
        android:contentDescription="@string/desc"
        android:layout_width="@dimen/square_button_parameter"
        android:layout_height="@dimen/square_button_parameter"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:elevation="@dimen/button_elevation"
        app:srcCompat="@drawable/bookmark_check"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/back_button"
        android:contentDescription="@string/desc"
        android:layout_width="@dimen/square_button_parameter"
        android:layout_height="@dimen/square_button_parameter"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:elevation="@dimen/button_elevation"
        android:focusable="true"
        app:srcCompat="@drawable/back_arrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <ScrollView
        style="@android:style/Widget.DeviceDefault.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/bg_color"
        android:padding="@dimen/padding_smaller"
        android:scrollbarStyle="outsideOverlay"
        android:layout_below="@+id/category_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/bg_color">

            <ImageView
                android:id="@+id/detail_image"
                android:contentDescription="@string/desc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_parameter_large"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="?bg_color"
                android:padding="@dimen/padding_smaller" />

            <TextView
                android:id="@+id/details"
                style="?text_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/detail_image"
                android:selectAllOnFocus="true"
                android:textColor="?text_color_primary"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>