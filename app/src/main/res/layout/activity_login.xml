<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_dark"
    android:orientation="vertical">

    <ImageView
        android:contentDescription="@string/desc"
        android:layout_width="@dimen/layout_parameter_medium"
        android:layout_height="@dimen/layout_parameter_medium"
        android:layout_marginTop="86sp"
        app:srcCompat="@drawable/ic_fingerprint"
        android:id="@+id/img"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="38dp"
        android:background="@drawable/btn_gradient_blue"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_below="@+id/edit_text_password"
        android:layout_alignStart="@+id/btn_sign_up" />

    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="@dimen/edit_text_height"
        android:layout_below="@+id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:background="@drawable/btn_gradient_gray"
        android:hint="@string/hint_username"
        android:inputType="text|textEmailAddress"
        android:lines="1"
        android:maxLength="30"
        android:singleLine="true"
        android:paddingStart="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        android:textColor="@color/filler"
        android:textColorHint="@color/hintColor"
        app:paddingEnd="@dimen/padding_smaller" />

    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="@dimen/edit_text_height"
        android:layout_alignStart="@+id/edit_text_email"
        android:layout_below="@+id/edit_text_email"
        android:layout_marginTop="@dimen/edit_text_height"
        android:background="@drawable/btn_gradient_gray"
        android:hint="@string/hint_password"
        android:lines="1"
        android:maxLength="12"
        android:singleLine="true"
        android:paddingEnd="@dimen/padding_smaller"
        android:paddingStart="@dimen/padding_small"
        android:password="true"
        android:textColor="@color/filler"
        android:textColorHint="@color/hintColor" />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@null"
        android:text="@string/new_user"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@+id/btn_sign_in"
        android:layout_centerHorizontal="true" />
</RelativeLayout>