<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_dark"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:contentDescription="@string/desc"
        android:layout_width="@dimen/layout_parameter_medium"
        android:layout_height="@dimen/layout_parameter_medium"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86sp"
        app:srcCompat="@drawable/fingerprint" />

    <Button
        android:id="@+id/submit"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/button_gradient_blue"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginBottom="44sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/new_email"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="@dimen/edit_text_height"
        android:layout_above="@+id/new_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36sp"
        android:background="@drawable/button_gradient_gray"
        android:hint="@string/hint_username"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:maxLength="30"
        android:maxLines="1"
        android:minLines="1"
        android:paddingEnd="@dimen/padding_small"
        android:paddingStart="@dimen/padding_small"
        android:textColor="@color/filler"
        android:textColorHint="@color/hintColor" />

    <EditText
        android:id="@+id/con_pass"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="@dimen/edit_text_height"
        android:background="@drawable/button_gradient_gray"
        android:hint="@string/confirm_password"
        android:lines="1"
        android:maxLength="12"
        android:paddingStart="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        android:password="true"
        android:maxLines="1"
        android:minLines="1"
        android:textColor="@color/filler"
        android:textColorHint="@color/hintColor"
        android:layout_marginBottom="28sp"
        android:layout_above="@+id/submit"
        android:layout_alignStart="@+id/new_pass" />

    <EditText
        android:id="@+id/new_pass"
        android:layout_width="@dimen/edit_text_width"
        android:layout_height="@dimen/edit_text_height"
        android:layout_above="@+id/con_pass"
        android:layout_alignStart="@+id/new_email"
        android:layout_marginBottom="36dp"
        android:background="@drawable/button_gradient_gray"
        android:hint="@string/password"
        android:lines="1"
        android:maxLength="12"
        android:maxLines="1"
        android:minLines="1"
        android:paddingEnd="@dimen/padding_small"
        android:paddingStart="@dimen/padding_small"
        android:password="true"
        android:textAllCaps="false"
        android:textColor="@color/filler"
        android:textColorHint="@color/hintColor" />

</RelativeLayout>