<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_dark"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86sp"
        app:srcCompat="@drawable/fingerprint" />

    <Button
        android:id="@+id/submit"
        android:layout_width="150sp"
        android:layout_height="43sp"
        android:background="@drawable/rounded_button"
        android:text="Submit"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginBottom="44sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/new_email"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:background="@drawable/detail_button"
        android:hint="123@xyz.com"
        android:lines="1"
        android:maxLength="30"
        android:paddingLeft="10sp"
        android:singleLine="true"
        android:textColor="@color/filler"
        android:textColorHint="@color/hintColor"
        android:layout_above="@+id/new_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36sp" />

    <EditText
        android:id="@+id/con_pass"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:background="@drawable/detail_button"
        android:hint="Confirm Password"
        android:lines="1"
        android:maxLength="12"
        android:paddingLeft="10sp"
        android:password="true"
        android:singleLine="true"
        android:textColor="@color/filler"
        android:textColorHint="@color/hintColor"
        android:layout_marginBottom="28sp"
        android:layout_above="@+id/submit"
        android:layout_alignStart="@+id/new_pass" />

    <EditText
        android:id="@+id/new_pass"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:background="@drawable/detail_button"
        android:hint="Password"
        android:lines="1"
        android:maxLength="12"
        android:paddingLeft="10sp"
        android:password="true"
        android:singleLine="true"
        android:textColor="@color/filler"
        android:textColorHint="@color/hintColor"
        android:layout_above="@+id/submit"
        android:layout_alignStart="@+id/new_email"
        android:layout_marginBottom="102sp" />

</RelativeLayout>