<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/relative_layout_height"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="@dimen/padding_smaller"
    android:saveEnabled="false"
    android:visibility="visible">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/cardview_margin_top"
        android:layout_marginEnd="@dimen/cardview_margin_top"
        android:layout_marginLeft="@dimen/cardview_margin_right"
        android:layout_marginRight="@dimen/cardview_margin_right"
        android:layout_marginTop="0dp"
        android:padding="@dimen/padding_smaller"
        app:cardElevation="@dimen/cardview_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:paddingBottom="@dimen/padding_smaller"
            android:paddingLeft="@dimen/padding_smaller"
            android:paddingTop="@dimen/padding_smaller">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_view_height"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/headline"
                android:layout_width="@dimen/edit_text_width"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/image"
                android:layout_below="@+id/image"
                android:paddingLeft="@dimen/padding_smaller"
                android:textColor="@color/gray"
                android:textSize="19sp"
                android:textStyle="bold"
                tools:text="City" />

            <TextView
                android:id="@+id/filler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/headline"
                android:paddingLeft="@dimen/padding_smaller"
                android:textColor="@color/filler"
                android:textSize="11sp"
                tools:text="filler" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/headline"
                android:paddingLeft="@dimen/padding_smaller"
                android:text="12/12/12"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="12sp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>